{% extends 'base.html.twig' %} {% block body %}

<a class="btn btn-default" href="/">Back to Events</a>

<hr>

<h2 class="page-header">{{event.event_name}}</h2>

<ul class="list-group">

    <li class="list-group-item">Category: {{event.event_img}}</li>

    <li class="list-group-item">Priority: {{event.event_type}}</li>

    <li class="list-group-item">Due: <strong> {{event.event_date|date('F j, Y, g:i a')}} </strong> </li>

</ul>

<p>

    {{event.event_desc}}

</p>

{% endblock %}