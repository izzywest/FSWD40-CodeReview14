{% extends 'base.html.twig' %} {% block body %}

<a class="btn btn-default" href="/">Back to Events</a>

<hr>

<h2 class="page-header">{{event.eventName}}</h2>

<ul class="list-group">

    <li class="list-group-item">Image: {{event.eventimg}}</li>

    <li class="list-group-item">Type: {{event.eventType}}</li>

    <li class="list-group-item">Date: <strong> {{event.eventDate|date('F j, Y, g:i a')}} </strong> </li>

</ul>

<p>

    {{event.eventDesc}}

</p>

{% endblock %}